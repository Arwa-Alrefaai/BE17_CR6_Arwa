{% extends 'base.html.twig' %}

{% block title %}BigEvents index{% endblock %}

{% block body %}
<div style="text-align: center;"> 
    <h1>Big Events in Vienna</h1> 
</div>
<div class="container">
     <div class="row row-cols-3 g-4"> 
        {% for big_event in big_events %}
        <div class="card">
           <div class="card-header text-bg-secondary " style="text-align: center;"  >{{ big_event.type }}</div>
           <div class="card-body">
            <img src="{{ asset('pictures/' ~ big_event.image ) }}"  class="card-img-top" alt="">
            <h5 class="card-title">{{ big_event.name }}</h5><hr>
            <p class="card-text"><b> The Event Date :</b>{{ big_event.date ? big_event.date|date('Y-m-d') : '' }}</p>
            <p class="card-text"><b>Adress : </b>{{ big_event.street }}</p>
            <p class="card-text">{{ big_event.zipCode }} {{ big_event.cityName }}</p>
            <div class="card-footer">
                <div><b>Start :</b>{{ big_event.startTime ? big_event.startTime|date('H:i') : '' }}</div><hr>
            </div>
            <a href="{{ path('app_big_events_show', {'id': big_event.id}) }}" class="btn btn-primary"> Show Details </a>
            <a href="{{ path('app_big_events_edit', {'id': big_event.id}) }}" class="btn btn-success" style="margin-top:5px ;"> Edite </a>
            <a class='btn btn-danger'>{{ include('big_events/_delete_form.html.twig') }}</a>

        </div>
        
        </div>  
        {% endfor %}
     </div> 
</div>

<div style="text-align: center;"><a href="{{ path('app_big_events_new') }}" class="btn btn-info" style="margin-top:20px ; margin-bottom:20px;">To Create a new Event click here please!</a></div>
    
{% endblock %}
